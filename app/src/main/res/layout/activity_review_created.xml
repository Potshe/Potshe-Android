<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintVertical_chainStyle="spread"
    tools:context=".src.main.review.ReviewCreatedActivity">



    <ImageView
        android:id="@+id/logo_icon"
        android:layout_width="124dp"
        android:layout_height="143dp"
        android:layout_marginTop="204dp"
        android:src="@drawable/logo_point_share"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="포인트 작성이 완료되었습니다!"
        android:textAlignment="center"
        android:fontFamily="@font/sf_compat_regular"
        android:textColor="@color/deep_grey"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/logo_icon"/>

    <TextView
        android:id="@+id/review_created_btn_finish"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="15dp"
        android:gravity="center"
        android:text="홈 화면으로"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:fontFamily="@font/sf_compat_regular"
        android:background="@drawable/review_tag_text_bg"
        android:backgroundTint="@color/main_skyblue"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>