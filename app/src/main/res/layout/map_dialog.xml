<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="73dp"
        android:paddingTop="18dp"
        android:paddingStart="18dp"
        android:paddingEnd="20dp"
        android:paddingBottom="34dp"
        android:background="@drawable/dialog_box_164_x_81dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/dialog_tv_title"
            android:layout_width="82dp"
            android:layout_height="wrap_content"
            android:text="TITLE"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/deep_grey"
            android:fontFamily="@font/sf_compat_regular"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
        <TextView
            android:id="@+id/dialog_tv_tags"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="82dp"
            android:paddingTop="4dp"
            android:text="TAG"
            android:textSize="11sp"
            android:textColor="@color/deep_grey"
            android:fontFamily="@font/sf_compat_regular"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dialog_tv_title" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_constraintStart_toEndOf="@id/dialog_tv_title"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="18.65dp"
                android:src="@drawable/item_like_icon"
                app:tint="@color/main_skyblue"/>

            <TextView
                android:id="@+id/dialog_tv_likes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LIKES"
                android:textSize="11sp"
                android:textColor="@color/deep_grey"
                android:fontFamily="@font/sf_compat_regular"/>
        </LinearLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>