        android:topLeftRadius="2px"
        android:bottomLeftRadius="0px"
        android:bottomRightRadius="0px" />
    <solid
        android:color="@color/floating_button_color"
        />

    <stroke
        android:width="1px"
        android:color="@color/floating_button_border"/>

    <padding
